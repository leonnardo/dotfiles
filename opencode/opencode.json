{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "researcher": {
      "description": "Deep research agent for gathering information and storing in a knowledge base.",
      "mode": "subagent",
      "prompt": "{file:./prompts/researcher.txt}",
      "tools": {
        "write": true,
        "edit": true
      }
    }
  },
  "mcp": {
    "sequential-thinking": {
      "enabled": true,
      "type": "local",
      "command": [
        "docker",
        "run",
        "--rm",
        "-i",
        "mcp/sequentialthinking"
      ]
    },
    "context7": {
      "enabled": true,
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "perplexity": {
      "enabled": true,
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@perplexity-ai/mcp-server"
      ],
      "environment": {
        "PERPLEXITY_API_KEY": "{env:PERPLEXITY_API_KEY}"
      }
    }
  }
}
