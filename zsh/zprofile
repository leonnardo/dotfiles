# Env variables
export PAGER="most"
export MANPAGER="nvim +Man!"
export EDITOR='nvim'
PATH=$PATH:~/.local/bin

# Override zoxide command
ZOXIDE_CMD_OVERRIDE="cd"
eval "$(zoxide init --cmd ${ZOXIDE_CMD_OVERRIDE:-z} zsh)"
bindkey '^o' cdi

if [[ "$(uname)" == "Darwin" ]]; then
  . /usr/local/opt/asdf/libexec/asdf.sh
elif [[ -f /etc/arch-release ]]; then
  . /opt/asdf-vm/asdf.sh
fi

. ~/.asdf/plugins/dotnet/set-dotnet-env.zsh

# Aliases and functions
alias ls="eza --icons"
alias ll="eza --icons -lah"
alias lt="eza --icons -TL 2"
alias cat="bat"
alias lg="lazygit"
alias ld="lazydocker"
alias nv="nvim"
alias mkdir="mkdir -pv"
alias cp="cp -iv"
alias mv="mv -iv"
alias rm="rm -Iv"

# Install packages using yay (change to pacman/AUR helper of your choice)
function in() {
    yay -Slq | fzf -q "$1" -m --preview 'yay -Si {1}'| xargs -ro yay -S
}
# Remove installed packages (change to pacman/AUR helper of your choice)
function re() {
    yay -Qq | fzf -q "$1" -m --preview 'yay -Qi {1}' | xargs -ro yay -Rns
}

# tm - create new tmux session, or switch to existing one. Works from within tmux too. (@bag-man)
# `tm` will allow you to select your tmux session via fzf.
# `tm irc` will attach to the irc session (if it exists), else it will create it.

function tm() {
  [[ -n "$TMUX" ]] && change="switch-client" || change="attach-session"
  if [ $1 ]; then
    tmux $change -t "$1" 2>/dev/null || (tmux new-session -d -s $1 && tmux $change -t "$1"); return
  fi
  session=$(tmux list-sessions -F "#{session_name}" 2>/dev/null | fzf --exit-0) &&  tmux $change -t "$session" || echo "No sessions found."
}

function vmpa() {
  plugins=$(asdf plugin list-all | fzf -m | awk '{print $1}')

  if [[ $plugins ]]; then
    for plugin in $(echo $plugins);
    do;
      echo "Adding $plugin plugin";
      asdf plugin add $plugin;
    done;
  fi
}

function vmpr() {
  plugins=$(asdf plugin list | fzf -m)

  if [[ $plugins ]]; then
    for plugin in $(echo $plugins);
    do;
      echo "Removing $plugin plugin";
      asdf plugin remove $plugin;
    done;
  fi
}

# Install one or more versions of specified language
# e.g. `vmi rust` # => fzf multimode, tab to mark, enter to install
# if no plugin is supplied (e.g. `vmi<CR>`), fzf will list them for you
# Mnemonic [V]ersion [M]anager [I]nstall
function vmi() {
  local lang=${1}

  if [[ ! $lang ]]; then
    lang=$(asdf plugin-list | fzf)
  fi

  if [[ $lang ]]; then
    local versions=$(asdf list-all $lang | fzf --tac --no-sort --multi)
    if [[ $versions ]]; then
      for version in $(echo $versions);
      do; asdf install $lang $version; done;
    fi
  fi
}

# Remove one or more versions of specified language
# e.g. `vmi rust` # => fzf multimode, tab to mark, enter to remove
# if no plugin is supplied (e.g. `vmi<CR>`), fzf will list them for you
# Mnemonic [V]ersion [M]anager [C]lean
function vmc() {
  local lang=${1}

  if [[ ! $lang ]]; then
    lang=$(asdf plugin-list | fzf)
  fi

  if [[ $lang ]]; then
    local versions=$(asdf list $lang | fzf -m)
    if [[ $versions ]]; then
      for version in $(echo $versions);
      do; asdf uninstall $lang $version; done;
    fi
  fi
}

function vmsg() {
  local lang=${1}

  if [[ ! $lang ]]; then
    lang=$(asdf plugin-list | fzf)
  fi


  if [[ $lang ]]; then
    local version=$(asdf list $lang | sed 's/[ *]//g' | fzf)
    if [[ $version ]]; then
      asdf global $lang $version;
      echo "$lang global version set to $version"
    fi
  fi
}


function vmsl() {
  local lang=${1}

  if [[ ! $lang ]]; then
    lang=$(asdf plugin-list | fzf)
  fi


  if [[ $lang ]]; then
    local version=$(asdf list $lang | sed 's/[ *]//g' | fzf)
    if [[ $version ]]; then
      asdf local $lang $version;
      echo "$lang local version set to $version"
    fi
  fi
}
